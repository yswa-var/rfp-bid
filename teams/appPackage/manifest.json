{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "rfp-proposal-assistant",
    "packageName": "com.rfpbot.proposal",
    "developer": {
        "name": "RFP Proposal Assistant",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/terms"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "RFP Assistant",
        "full": "RFP Proposal Generation Assistant"
    },
    "description": {
        "short": "AI-powered RFP proposal generator",
        "full": "Generate comprehensive RFP proposals using specialized AI teams for technical, financial, legal, and QA analysis"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal",
                        "team",
                        "groupchat"
                    ],
                    "commands": [
                        {
                            "title": "Generate Proposal",
                            "description": "Generate a comprehensive RFP proposal"
                        },
                        {
                            "title": "Interactive Mode",
                            "description": "Start step-by-step proposal generation"
                        },
                        {
                            "title": "System Status",
                            "description": "Check system status and available features"
                        },
                        {
                            "title": "Help",
                            "description": "Show available commands and examples"
                        }
                    ]
                }
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}"
    ]
}